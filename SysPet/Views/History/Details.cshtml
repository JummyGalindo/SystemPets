@model SysPet.Models.HistorialesViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-6 offset-3">
    <h1>Detalle del historial</h1>

    <div>
        @Html.ActionLink("Ir a Historiales", "Index", new {}, new { @class = "btn btn-primary" })
    </div>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaVisita)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaVisita)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Motivo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Motivo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Diagnostico)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Diagnostico)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paciente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paciente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Editar", "Edit", new { id=Model.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Eliminar", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
    </div>
</div>


