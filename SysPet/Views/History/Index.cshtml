@model IEnumerable<SysPet.Models.HistorialesViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Historiales</h1>

<p>
    @Html.ActionLink("Agregar Historial", "Create", new{}, new { @class = "btn btn-primary" })
</p>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FechaVisita)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Diagnostico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPaciente)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaVisita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Motivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diagnostico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPaciente)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Detalle", "Details", new { id=item.Id }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    @section Scripts { @{ await Html.RenderPartialAsync("EmptyData", new { Url = ViewBag.Url }); } }
}
