@model IEnumerable<SysPet.Models.HistorialesViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-normal mb-3 pb-3">Historiales</h1>

<div class="btn-head custom-tooltip">
    <a class="btn btn-outline-primary btn-image" href="@Url.Action("Create", "History", new {})">
        <img src="../icons/plus-square.svg" alt="Nuevo Historial">
        <span class="custom-tooltip-text-head">Nuevo Historial</span>
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FechaVisita)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Diagnostico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaVisita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Motivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diagnostico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary custom-tooltip" href="@Url.Action("Edit", "History", new { id = item.Id })">
                            <img src="../icons/pencil-square.svg" alt="Editar">
                            <span class="custom-tooltip-text">Editar</span>
                        </a>

                        <a class="btn btn btn-outline-info custom-tooltip" href="@Url.Action("Details", "History", new { id = item.Id })">
                            <img src="../icons/view-list.svg" alt="Detalle">
                            <span class="custom-tooltip-text-detail">Detalle</span>
                        </a>

                        <a class="btn btn-outline-danger custom-tooltip" href="@Url.Action("Delete", "History", new { id = item.Id })">
                            <img src="../icons/x-square.svg" alt="Eliminar">
                            <span class="custom-tooltip-text-delete">Eliminar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    @section Scripts { @{ await Html.RenderPartialAsync("EmptyData", new { Url = ViewBag.Url }); } }
}
