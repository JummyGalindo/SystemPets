@model SysPet.Models.MascotasViewModel

@{
    ViewData["Title"] = "Edit";
}

@try
{
    <div class="col-md-6 offset-4">
        <h1 class="fw-normal mb-3 pb-3">Editar Mascota</h1>

        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-outline mb-4" style="display: none;">

                        <label asp-for="IdPaciente" class="control-label col-md-6"></label>
                        <input asp-for="IdPaciente" class="form-control" />
                    </div>
                    <div class="d-g">

                        <div class="form-outline mb-4">
                            <label asp-for="Nombre" class="control-label col-md-6"></label>
                            <input asp-for="Nombre" class="form-control form-control-lg" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Raza" class="control-label col-md-6"></label>
                            <input asp-for="Raza" class="form-control form-control-lg" />
                            <span asp-validation-for="Raza" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="d-g">

                        <div class="form-outline mb-4">
                            <label asp-for="Especie" class="control-label col-md-6"></label>
                            <input asp-for="Especie" class="form-control form-control-lg" />
                            <span asp-validation-for="Especie" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Sexo" class="control-label col-md-6"></label>
                            <input asp-for="Sexo" class="form-control form-control-lg" />
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="d-g">

                        <div class="form-outline mb-4">
                            <label asp-for="Edad" class="control-label col-md-6"></label>
                            <input asp-for="Edad" class="form-control form-control-lg" />
                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Color" class="control-label col-md-6"></label>
                            <input asp-for="Color" class="form-control form-control-lg" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="d-g" style="align-items: end;">

                        <div class="form-outline mb-4">
                            <label asp-for="Peso" class="control-label col-md-6"></label>
                            <input asp-for="Peso" class="form-control form-control-lg" />
                            <span asp-validation-for="Peso" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4 form-check form-switch">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                            </label>
                        </div>

                    </div>
                    <div style="display: flex;flex-direction: column; align-items: flex-start;">

                        @if (Model.Imagen != null)
                        {
                            <div class="col-sm-4 mb-4">
                                @Html.LabelFor(x => x.Imagen)
                                <img src="data:@Model.TipoContenido;base64,@(Convert.ToBase64String(Model.Imagen))" class="rounded-3" style="width: 200px;"
                                     alt="Imagen del Paciente" />
                            </div>
                            <div class="mb-4" style="display: flex;justify-content: center;align-items: center;">
                                <label asp-for="Image" class="form-label text-white m-1 custom-file-label" style="color: #0dcaf0 !important;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                                        <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z" />
                                    </svg>
                                </label>
                                <input asp-for="Image" class="form-control" type="file" accept="image/*" />
                            </div>
                        }
                    </div>
                    <div class="form-outline mb-4 btn-groups">
                        <button type="submit" class="btn btn-outline-success btn-lg btn-block btn-custom-color-success btn-custom-f">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                                <path d="M11 2H9v3h2V2Z" />
                                <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0ZM1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5Zm3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4v4.5ZM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5V15Z" />
                            </svg>
                            Guardar
                        </button>
                        <a class="btn btn-outline-danger btn-lg btn-block btn-custom-color-delete btn-custom-f" href="@Url.Action("Index", "Patient", new {})">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>

    </div>
}
catch (Exception ex)
{
    <p>Error: @ex.Message</p>
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
