@model IEnumerable<SysPet.Models.MascotasViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-normal mb-3 pb-3">Mascotas</h1>

<div class="btn-head custom-tooltip">
    <a class="btn btn-outline-primary btn-image" href="@Url.Action("Create", "Patient", new {})">
        <img src="../icons/plus-square.svg" alt="Nueva Mascota">
        <span class="custom-tooltip-text-head">Nueva Mascota</span>
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Raza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sexo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Peso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Propietario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Raza)
                    </td>
                   <td>
                        @Html.DisplayFor(modelItem => item.Sexo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Peso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Propietario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary custom-tooltip" href="@Url.Action("Edit", "Patient", new { id = item.IdPaciente })">
                            <img src="../icons/pencil-square.svg" alt="Editar">
                            <span class="custom-tooltip-text">Editar</span>
                        </a>

                        <a class="btn btn btn-outline-info custom-tooltip" href="@Url.Action("Details", "Patient", new { id = item.IdPaciente })">
                            <img src="../icons/view-list.svg" alt="Detalle">
                            <span class="custom-tooltip-text-detail">Detalle</span>
                        </a>

                        <a class="btn btn-outline-danger custom-tooltip" href="@Url.Action("Delete", "Patient", new { id = item.IdPaciente })">
                            <img src="../icons/x-square.svg" alt="Eliminar">
                            <span class="custom-tooltip-text-delete">Eliminar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @section Scripts { @{ await Html.RenderPartialAsync("EmptyData", new { Url = ViewBag.Url }); } }
}


