@model SysPet.Models.MascotasViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="col-md-6 offset-3 fw-normal mb-3 pb-3">Agregar Mascota</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline mb-4">
                <label asp-for="Nombre" class="control-label col-md-4"></label>
                <input asp-for="Nombre" class="form-control form-control-lg" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Raza" class="control-label col-md-4"></label>
                <input asp-for="Raza" class="form-control form-control-lg" />
                <span asp-validation-for="Raza" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Especie" class="control-label col-md-4"></label>
                <input asp-for="Especie" class="form-control form-control-lg" />
                <span asp-validation-for="Especie" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Sexo" class="control-label col-md-4"></label>
                <input asp-for="Sexo" class="form-control form-control-lg" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Edad" class="control-label col-md-4"></label>
                <input asp-for="Edad" class="form-control form-control-lg" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Color" class="control-label col-md-4"></label>
                <input asp-for="Color" class="form-control form-control-lg" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Peso" class="control-label col-md-4"></label>
                <input asp-for="Peso" class="form-control form-control-lg" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.IdPersona, "Propietario")
                @Html.DropDownListFor(model => model.IdPersona, Model.ListaPersonas,"Seleccionar un propietario", new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.IdPersona)
            </div>

            <div class="form-outline mb-4 btn-groups">
                <button type="submit" class="btn btn-outline-success btn-lg btn-block custom-tooltip">
                    <img src="../icons/floppy.svg" alt="Guardar">
                    <span class="custom-tooltip-text">Guardar</span>
                </button>
                <a class="btn btn-outline-danger btn-lg btn-block custom-tooltip" href="@Url.Action("Index", "Patient", new {})">
                    <img src="../icons/x-square.svg" alt="Cancelar">
                    <span class="custom-tooltip-text">Cancelar</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

