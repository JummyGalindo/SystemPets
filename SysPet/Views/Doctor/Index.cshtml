@model IEnumerable<SysPet.Models.PersonasViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-normal mb-3 pb-3">Doctores</h1>

<div class="btn-head custom-tooltip">
    <a class="btn btn-outline-primary btn-image" href="@Url.Action("Create", "Person", new {})">
        <img src="../icons/plus-square.svg" alt="Nuevo Doctor">
        <span class="custom-tooltip-text-head">Nuevo Doctor</span>
    </a>
</div>

@if(Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ciudad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodigoPostal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoPostal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary custom-tooltip" href="@Url.Action("Edit", "Person", new { id = item.IdPersona })">
                            <img src="../icons/pencil-square.svg" alt="Editar">
                            <span class="custom-tooltip-text">Editar</span>
                        </a>

                        <a class="btn btn btn-outline-info custom-tooltip" href="@Url.Action("Details", "Person", new { id = item.IdPersona })">
                            <img src="../icons/view-list.svg" alt="Detalle">
                            <span class="custom-tooltip-text-detail">Detalle</span>
                        </a>

                        <a class="btn btn-outline-danger custom-tooltip" href="@Url.Action("Delete", "Person", new { id = item.IdPersona })">
                            <img src="../icons/x-square.svg" alt="Eliminar">
                            <span class="custom-tooltip-text-delete">Eliminar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @section Scripts { @{ await Html.RenderPartialAsync("EmptyData", new { Url = ViewBag.Url }); } }
}