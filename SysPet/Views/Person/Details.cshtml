@model SysPet.Models.PersonasViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="modal fade" id="detailModal-@Model.IdPersona" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Detalle del cliente</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <dl class="row">

                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ApellidoPaterno)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ApellidoPaterno)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ApellidoMaterno)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ApellidoMaterno)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Ciudad)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Ciudad)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.CodigoPostal)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.CodigoPostal)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Estado)
                    </dt>
                    @if (Model.State.Equals("Activo"))
                    {
                        <dd class="col-sm-6 badge-custom-success">
                            @Html.DisplayFor(model => Model.State)
                        </dd>
                    }
                    @if (Model.State.Equals("Inactivo"))
                    {
                        <dd class="col-sm-6 badge-custom-danger">
                            @Html.DisplayFor(model => Model.State)
                        </dd>
                    }
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
