@model SysPet.Models.InventariosViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="col-md-6 offset-3 fw-normal mb-3 pb-3">Agregar Inventario</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline mb-4">
                <label asp-for="FechaIngreso" class="control-label col-md-4"></label>
                <input asp-for="FechaIngreso" class="form-control form-control-lg" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="FechaVencimiento" class="control-label col-md-4"></label>
                <input asp-for="FechaVencimiento" class="form-control form-control-lg" />
                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Stock" class="control-label col-md-4"></label>
                <input asp-for="Stock" class="form-control form-control-lg" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.IdProducto, "Producto")
                @Html.DropDownListFor(model => model.IdProducto, Model.Productos,"Seleccionar un producto", new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.IdProducto)
            </div>
            <div class="form-outline mb-4 btn-groups">
                <button type="submit" class="btn btn-outline-success btn-lg btn-block custom-tooltip">
                    <img src="../icons/floppy.svg" alt="Guardar">
                    <span class="custom-tooltip-text">Guardar</span>
                </button>
                <a class="btn btn-outline-danger btn-lg btn-block custom-tooltip" href="@Url.Action("Index", "Inventory", new {})">
                    <img src="../icons/x-square.svg" alt="Cancelar">
                    <span class="custom-tooltip-text">Cancelar</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
