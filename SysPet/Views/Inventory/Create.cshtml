@model SysPet.Models.InventariosViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="col-md-6 offset-3 fw-normal mb-3 pb-3">Agregar Inventario</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline mb-4">
                <label asp-for="FechaIngreso" class="control-label col-md-4"></label>
                <input asp-for="FechaIngreso" class="form-control form-control-lg" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="FechaVencimiento" class="control-label col-md-4"></label>
                <input asp-for="FechaVencimiento" class="form-control form-control-lg" />
                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Stock" class="control-label col-md-4"></label>
                <input asp-for="Stock" class="form-control form-control-lg" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.IdProducto, "Producto")
                @Html.DropDownListFor(model => model.IdProducto, Model.Productos,"Seleccionar un producto", new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.IdProducto)
            </div>
            <div class="form-outline mb-4" style="padding-top: 16px;">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg btn-block" />
                @Html.ActionLink("Cancelar", "Index", new {}, new { @class = "btn btn-danger btn-lg btn-block" })
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
