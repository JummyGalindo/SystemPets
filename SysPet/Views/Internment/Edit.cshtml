@model SysPet.Models.InternamientosViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-6 offset-3">
    <h1>Editar Internamiento</h1>

    <div>
        @Html.ActionLink("Ir a Internamientos", "Index", new {}, new { @class = "btn btn-primary" })
    </div>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FechaIngreso" class="control-label"></label>
                    <input asp-for="FechaIngreso" class="form-control" />
                    <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medicamento" class="control-label"></label>
                    <input asp-for="Medicamento" class="form-control" />
                    <span asp-validation-for="Medicamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Antecedentes" class="control-label"></label>
                    <input asp-for="Antecedentes" class="form-control" />
                    <span asp-validation-for="Antecedentes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tratamiento" class="control-label"></label>
                    <input asp-for="Tratamiento" class="form-control" />
                    <span asp-validation-for="Tratamiento" class="text-danger"></span>
                </div>
                <div class="form-group form-check form-switch">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Cancelar", "Index", new {}, new { @class = "btn btn-danger" })
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
