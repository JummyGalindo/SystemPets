@model UsuariosViewModel

@{
    ViewBag.Title = "Iniciar Sesión";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <h2 class="fw-normal mb-3 pb-3">Iniciar Sesión</h2>
            @using (Html.BeginForm("Singin", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-outline mb-4">

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", type = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "Campo Requerido", new { @class = "text-danger" })
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-4" })
                </div>

                <div class="form-outline mb-4">
                    @Html.PasswordFor(m => m.Contrasenia, new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(m => m.Contrasenia, "Campo Requerido", new { @class = "text-danger" })

                    @Html.LabelFor(m => m.Contrasenia, new { @class = "control-label col-md-4" })
                </div>

                <div class="pt-1 mb-4">
                    <button type="submit" class="btn btn-info btn-lg btn-block" style="color:white;">Iniciar Sesión</button>
                </div>

                <p>¿No tienes una cuenta?
                    @Html.ActionLink("Registrarse", "Create", "User", new{}, new { @class = "link-info" })
                </p>
            }
        </div>
    </div>
</div>

