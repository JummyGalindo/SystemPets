@model SysPet.Models.CitasViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="col-md-6 offset-3 fw-normal mb-3 pb-3">Agregar Cita</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline mb-4">
                <label asp-for="FechaCita" class="control-label col-md-4"></label>
                <input asp-for="FechaCita" class="form-control form-control-lg" />
                <span asp-validation-for="FechaCita" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Motivo" class="control-label col-md-4"></label>
                <input asp-for="Motivo" class="form-control form-control-lg" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                @Html.LabelFor(model => model.IdPersona, "Propietario", new { @class = "control-label col-md-4" })
                @Html.DropDownListFor(model => model.IdPersona, Model.Personas,"Seleccionar un propietario", new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(model => model.IdPersona)
            </div>
            <div class="form-outline mb-4 btn-groups">
                @* <input type="submit" value="Guardar" class="btn btn-success btn-lg btn-block" /> *@
                <button type="submit" class="btn btn-outline-success btn-lg btn-block custom-tooltip">
                    <img src="../icons/floppy.svg" alt="Guardar">
                    <span class="custom-tooltip-text">Guardar</span>
                </button>
                <a class="btn btn-outline-danger btn-lg btn-block custom-tooltip" href="@Url.Action("Index", "Appointment", new {})">
                    <img src="../icons/x-square.svg" alt="Cancelar">
                    <span class="custom-tooltip-text">Cancelar</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
