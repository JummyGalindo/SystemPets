@model IEnumerable<SysPet.Models.CitasViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-normal mb-3 pb-3">Citas</h1>


<div class="btn-head custom-tooltip">
    <a class="btn btn-outline-primary btn-image" href="@Url.Action("Create", "Appointment", new {})">
        <img src="../icons/plus-square.svg" alt="Nueva Cita">
        <span class="custom-tooltip-text-head">Nueva Cita</span>
    </a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCita)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Motivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary custom-tooltip" href="@Url.Action("Edit", "Appointment", new { id = item.Id })">
                            <img src="../icons/pencil-square.svg" alt="Editar">
                            <span class="custom-tooltip-text">Editar</span>
                        </a>

                        <a class="btn btn btn-outline-info custom-tooltip" href="@Url.Action("Details", "Appointment", new { id = item.Id })" data-toggle="modal" data-target="#staticBackdrop">
                            <img src="../icons/view-list.svg" alt="Detalle">
                            <span class="custom-tooltip-text-detail">Detalle</span>
                        </a>

                        <a class="btn btn-outline-danger custom-tooltip" href="@Url.Action("Delete", "Appointment", new { id = item.Id })">
                            <img src="../icons/x-square.svg" alt="Eliminar" >
                            <span class="custom-tooltip-text-delete">Eliminar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    @section Scripts { @{ await Html.RenderPartialAsync("EmptyData", new { Url = ViewBag.Url }); }  }

}
