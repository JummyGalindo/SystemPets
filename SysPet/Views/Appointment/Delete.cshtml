@model SysPet.Models.CitasViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="col-md-6 offset-3">
    <h1>Eliminar Cita</h1>

    <h3>¿Estas seguro de eliminar cita?</h3>

    <div>
        @Html.ActionLink("Ir a Citas", "Index", new {}, new { @class = "btn btn-primary" })
    </div>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaCita)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaCita)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Motivo)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Motivo)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Apellidos)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Apellidos)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </form>
    </div>

</div>

