    </div>
    <div>
        @Html.ActionLink("Editar", "Update", new { id=Model.IdProducto }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Eliminar", "Delete", new { id = Model.IdProducto }, new { @class = "btn btn-danger" })
    </div>
</div>
